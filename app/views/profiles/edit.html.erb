<%= turbo_frame_tag "profile-action" do %>
  <h2 class="text-2xl text-gray-800 pb-3">Edit Profile</h2>
  <%= form_with model: @user, html: { class: "mt-8 grid grid-cols-6 gap-6" } do |form| %>
    <div class="field col-span-6">
      <%= form.label :username, "Username", placeholder: "#{@user.username}", class: "form-label" %>
      <%= form.text_field :username, required: true, autofocus: true, class: "form-field" %>
    </div>
  <% end %>
<% end %>