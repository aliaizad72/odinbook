<%= render "shared/navbar" %>
<%= render "shared/flash" %>
<div class="grid grid-cols-1 md:grid-cols-3 auto-rows-min gap-4 md:w-4/5 px-5 mx-auto mt-5">
  <div class="md:col-span-3 grid grid-cols-1 grid-rows-1 gap-4 py-4 pr-6 pl-3 bg-white shadow-sm border border-slate-200 rounded-lg">
    <div class="flex items-center justify-between">
      <div class="text-3xl">@<%= @user.username %></div>
      <% if current_user != @user %>
        <% if current_user.followings.include?(@user)  %>
          <%= link_to "Unfollow", unfollow_path(@user), data: { turbo_method: :delete }, class: "rounded bg-blue-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-blue-700" %>
        <% else %>
          <%= button_to "Follow", follow_path(@user), data: { turbo: false }, class: "rounded bg-blue-600 px-4 py-1.5 text-sm font-medium text-white hover:bg-blue-700"%>
        <% end %>
      <% end %>
    </div>
    <div class="flex items-center gap-2">
      <div class="transition hover:text-blue-700">
        <%= "#{pluralize(@user.posts.count, "Post")}" %>
      </div>
      <div>
        <%= link_to "#{pluralize(@user.followers.count, "Follower")}", profile_path(@user), data: { turbo_frame: "list-region" }, class: "transition hover:text-blue-700" %>
      </div>
      <div>
        <%= link_to "#{pluralize(@user.followings.count, "Following")}", followings_profile_path(@user), data: { turbo_frame: "list-region" }, class: "transition hover:text-blue-700" %>
      </div>
    </div>
  </div>
  <% if current_user == @user %>
    <div class="md:col-span-3 col-start-1 row-start-2 mt-2">
      <%= render "shared/form", model: @post, placeholder: "What's the buzz?" %>
    </div>
  <% end %>
  <div class="md:col-span-2 row-span-3 col-start-1 row-start-3">
    <%= render 'shared/postlist', list_title: "Posts", list: @posts %>
  </div>
  <div class="md:col-start-3">
    <%= turbo_frame_tag "list-region" do %>
      <%= render "shared/userslist", list_title: "Followers", list: @user.followers, message: "Currently do not have any followers!" %>
    <% end %>
  </div>
</div>