<%= render "shared/navbar" %>
<%= render "shared/flash" %>
<div class="grid grid-cols-3 grid-rows-6 gap-6 w-2/3 mx-auto mt-5">
  <div class="col-span-2">
    <%= render 'shared/postform' %>
  </div>
  <div class="row-span-6 col-start-3 row-start-2">
    <h2 class="text-2xl text-gray-800 pb-3">Other Users</h2>
    <div class="relative flex flex-col bg-white shadow-sm border border-slate-200 rounded-lg w-96">
      <div class="mx-3 mb-0 pt-3 pb-3 px-1">
        <% @users.each do |user| %>
          <% next if current_user.followings.include?(user) %>
          <div class="text-sm text-gray-700 border-b border-slate-200 py-2 flex justify-between">
            <%= link_to "@#{user.username}", profile_path(user), class: "transition hover:text-blue-700" %>
            <%= link_to "Follow", follow_path(user), data: { turbo: false }, class: "transition hover:text-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-span-2 row-span-5 row-start-2">
    <%= render 'shared/postlist', list_title: "Your Feed", list: @posts %>
  </div>
</div>



