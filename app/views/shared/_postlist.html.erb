<h2 class="text-2xl text-gray-800 pb-3"><%= list_title %></h2>
<div class="relative flex flex-col bg-white shadow-sm border border-slate-200 rounded-lg">
  <% list.each_with_index do |p, ind| %>
    <div class="p-4 flex flex-col gap-0.5 justify-center <%= "border-t-2 border-slate-100" unless ind.zero?%>">
      <%= link_to "@#{p.user.username}", profile_path(p.user), class: "mb-2 text-gray-700 text-sm" %>
      <p class="text-gray-800">
        <%= p.body %>
      </p>
    </div>
    <div class="flex justify-between mx-3 border-t border-slate-200 pb-3 pt-2 px-1">
      <div class="flex gap-3 text-sm text-slate-600">
        <a href="" class="transition hover:text-blue-700">Like</a>
        <a href="" class="transition hover:text-blue-700">Comment</a>
      </div>
      <div class="text-sm text-slate-600 font-light">
        <%= p.created_at.strftime("%H:%M, #{p.created_at.day.ordinalize} %B %Y") %>
      </div>
    </div>
  <% end %>
</div>