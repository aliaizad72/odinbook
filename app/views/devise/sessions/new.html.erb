                <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                <path fill="none" d="M0 0h48v48H0z"></path>
            </svg>
            <div>
                Log in with Google
            </div>
        <% end %>
        <p class="mt-4 text-sm text-gray-500">
            Not a member?
            <%= link_to "Sign Up", new_user_registration_path, data: { turbo_frame: "_top" }, class: "font-semibold leading-6 text-sky-800 hover:text-sky-600" %>
        </p>
        <div class="p-4 m-2 mx-auto text-sm text-sky-800 rounded-lg bg-sky-50">
          <p class="font-medium">To test the app: </p>
          <p>Email: dev@odinbook.com </p>
          <p>Password: JoshAllen17 </p>
        </div>
      </div>
