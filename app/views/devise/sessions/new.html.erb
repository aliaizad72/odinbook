          <h1 class="mt-2 text-2xl font-bold text-gray-900 sm:text-3xl md:text-4xl">
            Welcome to Odinbook
          </h1>

          <p class="mt-4 leading-relaxed text-gray-500">
            Find your crowd. Create new connections. Express your mind.
          </p>
        </div>
        <%= turbo_frame_tag "log" do %>
          <%= render "shared/flash" %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 grid grid-cols-6 gap-6" }) do |f| %>
              <div class="field col-span-6">
                <%= f.label :email, "Email address", class: "form-label" %>
                <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-field" %>
              </div>
              <div class="col-span-6">
                <div class="field flex items-center justify-between">
                  <%= f.label :password, class: "form-label" %>
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <div class="text-sm">
                      <%= link_to "Forgot your password?",  new_password_path(resource_name), data: { turbo_frame: "_top" }, class: "font-semibold text-sky-800 hover:text-sky-600" %>
                    </div>
                  <% end %>
                </div>
                <div>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-field"%>
                </div>
                <% if devise_mapping.rememberable? %>
                    <div class="field flex items-center ml-[0.157rem] w-1/2 mt-2">
                        <%= f.check_box :remember_me, class: "w-3 h-3 text-sky-800 bg-gray-100 border-gray-300 rounded focus:ring-sky-600 focus:ring-2 dark:bg-gray-700" %>
                        <%= f.label :remember_me, class: "ms-2 text-sm font-medium text-gray-500" %>
                    </div>
                <% end %>
             </div>

             <div class="actions col-span-6">
                <%= f.submit "Log in", data: { turbo_frame: "_top"}, class: "-mt-4 w-full inline-block shrink-0 rounded-md border border-sky-800 bg-sky-800 px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-sky-800 focus:outline-none focus:ring active:text-sky-700" %>
              </div>
            <% end %>
        <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "mt-4 flex items-center justify-center gap-2 w-full inline-block shrink-0 rounded-md border border-black bg-black px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-black focus:outline-none focus:ring active:text-black" do %>
            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" width=21 height=21 >
                <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
